{
  "project_name": "Golf Simulator Booking Funnel",
  "version": "1.1",
  "owner": "MentisLib Agency",
  "client": "[Golf Venue Name]",
  "objective": "Build a high-converting, mobile-first booking website for a golf simulator business that accepts payments, automates scheduling, and drives higher revenue through strategic upsells.",

  "brand_theme": {
    "style": "Premium golf club aesthetic",
    "color_palette": ["#1A472A", "#D4AF37", "#F5F5F5"],
    "fonts": ["Poppins", "Playfair Display"],
    "tone": "Modern, elegant, sporty, high-trust"
  },

  "user_targets": {
    "primary": "Adults aged 25–55 booking solo or group simulator sessions",
    "secondary": ["Students", "Juniors", "Seniors", "Families"],
    "tertiary": "Corporate and event planners (phase 2)"
  },

  "key_metrics": {
    "online_booking_rate": ">=80% within 3 months",
    "avg_booking_value_increase": "+25% vs walk-in",
    "admin_inquiry_reduction": "-50% in 60 days",
    "repeat_user_rate": ">=30% in 90 days",
    "conversion_rate": ">=10% from visitor to booking"
  },

  "features": {
    "booking_flow": {
      "responsive_design": true,
      "filters": ["Player count", "User type", "Date/time", "Combo type (Adult+Child)"],
      "user_verification": {
        "student": "Checkbox + T&Cs (ID may be requested on-site)",
        "junior_senior": "Self-declared age gate at selection"
      },
      "dynamic_pricing": {
        "peak_definition": {
          "weekdays": "16:00–21:00",
          "weekends": "10:00–21:00",
          "holidays": "All day = peak"
        },
        "peak_hours": "Variable rate display",
        "off_peak_discount": true
      },
      "real_time_availability": true,
      "simple_checkout": "3-click flow from selection to payment"
    },
    "payment_processing": {
      "provider": "Stripe",
      "accepted_methods": ["Credit", "Debit", "Apple Pay", "Google Pay"],
      "collect_payment_upon_booking": true,
      "notifications": ["Email confirmation", "SMS receipt"]
    },
    "upsell_funnel": {
      "trigger_stage": "Post-selection, pre-payment",
      "visibility_rules": "Only show eligible offers based on selected date/time and user profile",
      "offers": [
        { "condition": "Booking < 2 hours", "message": "Add 30 mins for R50", "type": "time_extension" },
        { "condition": "Solo booking", "message": "Bring a friend for R120 more total", "type": "social_upgrade" },
        { "condition": "Group booking >= 2", "message": "Add 4 beers + 2 pizzas for R299", "type": "food_bundle" },
        { "condition": "Wednesday 5–9pm", "message": "Hook ‘n Slice Promo: 4ppl, 4hrs, F&B for R2800", "type": "daypart_promo" },
        { "condition": "First-time user", "message": "Refer a friend & get R100 off next session", "type": "referral_offer" },
        { "condition": "Combo booking (Adult+Child)", "message": "Upgrade to Family Experience for +R180", "type": "combo_bundle" }
      ]
    },
    "promotions": {
      "competition_module": true,
      "examples": ["Longest Drive", "Closest to Pin"],
      "entry_options": ["Add-on at checkout", "Standalone entry"],
      "proof_of_payment_required": true
    },
    "admin_dashboard": {
      "view_manage_bookings": true,
      "edit_availability": true,
      "revenue_reporting": ["Daily", "Weekly"],
      "promotion_toggles": true,
      "export_customer_data": true
    }
  },

  "booking_rules": {
    "min_advance_notice": "15 minutes",
    "max_session_length": "4 hours",
    "max_future_booking": "30 days",
    "cancellation_policy": "Free cancellation up to 2 hours before"
  },

  "non_functional_requirements": {
    "performance": "Page load < 2s on 3G",
    "security": ["SSL", "POPIA/GDPR compliant"],
    "uptime": "99.5%",
    "scalability": "Single location (Phase 1), Multi-location (Phase 2)",
    "maintainability": "Owner-editable CMS for promos and prices (Phase 2)"
  },

  "ai_integrations_phase2": {
    "chatbot": "AI concierge for FAQs and live upsells",
    "dynamic_pricing": "AI adjusts pricing by demand/time",
    "predictive_remarketing": "AI identifies lapsed users and auto-sends offers"
  },

  "launch_plan": {
    "timeline_weeks": 6,
    "phases": [
      { "name": "Design & UX", "duration_weeks": 2, "deliverable": "Clickable prototype (Figma)" },
      { "name": "Development", "duration_weeks": 3, "deliverable": "Functional web app" },
      { "name": "QA & Testing", "duration_weeks": 1, "deliverable": "Bug fixes + owner approval" },
      { "name": "Go Live", "duration_weeks": 0, "deliverable": "DNS switch + staff training" }
    ]
  },

  "revenue_formula": {
    "core_equation": "Volume x Conversion x AOV x Margin",
    "drivers": {
      "volume": "Traffic from ads/social",
      "conversion": "Optimized booking UX",
      "aov": "Upsells & bundles",
      "margin": "Prepaid sessions reduce no-shows"
    }
  },

  "phase_2_expansions": [
    "Corporate event module",
    "Membership/loyalty system",
    "Gift cards and merchandise store"
  ]
}
